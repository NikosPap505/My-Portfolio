---
// src/components/Footer.astro
import GithubIcon from "./icons/GithubIcon.astro";
import LinkedinIcon from "./icons/LinkedinIcon.astro";

const currentYear = new Date().getFullYear();
const socialLinks = [
    {
        name: "GitHub",
        href: "https://github.com/NikosPap505",
        icon: GithubIcon,
    },
    {
        name: "Linkedin",
        href: "https://www.linkedin.com/in/nikos-papoutsis/",
        icon: LinkedinIcon,
    },
];
---

<footer class="bg-gray-800 text-white p-4">
    <div class="container mx-auto px-4">
        <div class="flex justify-center space-x-6">
            {
                socialLinks.map(({ name, href, icon: IconComponent }) => (
                    <a
                        href={href}
                        class="text-gray-400 hover:text-green-700 transition-colors"
                        target="_blank"
                        rel="noopener noreferrer"
                        aria-label={name}
                    >
                        <IconComponent />
                    </a>
                ))
            }
        </div>
        <div
            class="flex justify-center items-center max-sm:px-5 max-sm:py-10 max-w-7xl w-full mx-auto"
        >
            <ul class="flex gap-x-8 justify-center mt-4">
                <li>
                    <a href="/" class="text-gray-400 hover:text-green-600"
                        >Home</a
                    >
                </li>
                <li>
                    <a
                        href="/about-me"
                        class="text-gray-400 hover:text-green-600">About</a
                    >
                </li>
                <li>
                    <a
                        href="/contact"
                        class="text-gray-400 hover:text-green-600">Contact</a
                    >
                </li>
            </ul>
        </div>
        <p class="text-center mt-4 text-gray-400">
            Â© {currentYear} Nikos Papoutsis. All rights reserved.
        </p>
    </div>
</footer>
